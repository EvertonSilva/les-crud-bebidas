<div id="search">
  <%= form_tag("/search", method: :get) do %>
    <div>
      <label>
        <span>Category:</span>
        <%= text_field_tag(:category) %>
      </label>
    </div>
    <div>
      <label>
        <span>Supplier:</span>
        <%= text_field_tag(:supplier) %>
      </label>
    </div>
    <div>
      <label>
        <span>Min. Price:</span>
        <%= text_field_tag(:price_min) %>
      </label>
    </div>
    <div>
      <label>
        <span>Max. Price:</span>
        <%= text_field_tag(:price_max) %>
      </label>
    </div>
    <%= submit_tag("Search") %>
  <% end %>
</div>
<h1>Listing Drinks</h1>
<div>
  <ul>
    <%= render @drinks %>
  </ul>
</div>
<div>
  <%= link_to "New drink", new_drink_path %>
</div>